@model ReDoMusic.Domain.Entities.Review

        <h2>Add Review</h2>

        <form method="post">
            <input type="hidden" asp-for="ProductId" />

            <div class="mb-3 mt-3">
                <label class="form-label">Product Id:</label>
                <input type="text" class="form-control" placeholder="Enter Product Id" name="ProductId">
            </div>
            <div class="mb-3 mt-3">
                <label class="form-label">Comment:</label>
                <input type="text" class="form-control" asp-for="Comment" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Rating:</label>
                <input type="number" class="form-control" asp-for="Rating" min="1" max="5" required />
            </div>
            <button type="submit" class="btn btn-primary">Add Review</button>
        </form>
