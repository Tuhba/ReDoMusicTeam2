@using ReDoMusic.Domain.Entities;
@model List<ReDoMusic.Domain.Entities.Customer>

<div class="container mt-3">
    <h2>Costumer List</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.Email</td>
                    <td>@customer.Address</td>
                    <td><a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-outline-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>